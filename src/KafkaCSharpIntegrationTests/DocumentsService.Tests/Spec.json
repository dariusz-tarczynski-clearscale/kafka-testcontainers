{
  "asyncapi": "2.3.0",
  "info": {
    "title": "Example application",
    "version": "0.1.0"
  },
  "channels": {
    "createOrder": {
      "address": "order/new",
      "messages": {
        "newOrderMessage": {
          "description": "Test message description.",
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "fullName": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "age": {
                "type": "integer",
                "minimum": 18
              }
            }
          }
        }
      }
    }
  }
}