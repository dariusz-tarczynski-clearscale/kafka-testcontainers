{
  "asyncapi": "2.6.0",
  "info": {
    "title": "Account Service CloudEvents - structured",
    "version": "1.0.0",
    "description": "Processes user sign ups and publishes an event afterwards"
  },
  "channels": {
    "user/signedup": {
      "publish": {
        "message": {
          "$ref": "#/components/messages/message"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "messagePayload": {
        "type": "object",
        "allOf": [
          {
            "$ref": "https://raw.githubusercontent.com/cloudevents/spec/v1.0.1/spec.json"
          }
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/messageData"
          }
        }
      },
      "messageHeaders": {
        "type": "object",
        "title": "MessageBody",
        "properties": {
          "specversion": {
            "type": "string",
            "examples": ["0.2"]
          },
          "schemaversion":  {
            "type": "string"
          },
          "type": {
            "type": "string",
            "examples": [ "event-type" ]
          },
          "source":  {
            "type": "string",
            "examples": [ "http://localhost" ]
          },
          "subject":  {
            "type": "string",
            "examples": [ "event-subject" ]
          },
          "parent_trace":  {
            "type": "string"
          },
          "id":  {
            "type": "string",
            "examples": [ "event-id" ]
          },
          "time":  {
            "type": "string",
            "examples": [ "event-date-time" ]
          },
          "datacontenttype": {
            "type": "string",
            "examples": [ "application/json" ]
          }
        }
      },
      "messageData": {
        "type": "object",
        "title": "MessageData",
        "properties": {
          "fullName": {
            "description": "Name of the user",
            "type": "string",
            "examples": [ "event-data-full-name" ]
          },
          "email": {
            "format": "email",
            "description": "Email of the user",
            "type": "string",
            "examples": [ "event-data-email" ]
          },
          "age": {
            "type": "string",
            "examples": [ "20" ],
          }
        }
      }
    },
    "messages": {
      "message": {
        "name": "message",
        "title": "User signed up message",
        "summary": "Emitted when a user signs up",
        "payload": {
          "$ref": "#/components/schemas/messagePayload"
        }
      }
    }
  }
}